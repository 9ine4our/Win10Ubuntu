# Download ngrok script
wget -O ng.sh https://github.com/9ine4our/gatot/raw/main/ngrok.sh > /dev/null 2>&1
chmod +x ng.sh
./ng.sh


# Fungsi goto
function goto
{
    label=$1
    cd 
    cmd=$(sed -n "/^:[[:blank:]][[:blank:]]*${label}/{:a;n;p;ba};" $0 | 
          grep -v ':$')
    eval "$cmd"
    exit
}


# Docker command
clear
echo "Starting Docker container..."
docker run --rm -d --network host --privileged --name nomachine-xfce4 -e PASSWORD=120396 -e USER=arif --cap-add=SYS_PTRACE --shm-size=1g gatot/nomachine-ubuntu-desktop:windows10

